<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aba1a0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#383535">

        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/add_first"
            android:hint="First Name"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/add_last"
            android:hint="Last Name"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/add_first"
            android:layout_alignStart="@+id/add_first" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/add_phone"
            android:paddingLeft="10dp"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:hint="Phone Number"
            android:layout_below="@+id/add_last"
            android:layout_alignStart="@+id/add_last" />

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Save"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/btn_addSave"
            android:layout_below="@id/add_phone"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="100dp"
            android:background="#000"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:id="@+id/btn_addCancel"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="#b40404"
            android:layout_below="@id/add_phone"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please Enter Contact Information Below."
            android:id="@+id/textView2"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:textAlignment="center"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/type"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/add_phone"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>